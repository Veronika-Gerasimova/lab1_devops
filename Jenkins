pipeline {
    agent any

    options {
        // Отменяем предыдущие запущенные билды той же ветки
        cancelPreviousRunningBuilds()
    }

    environment {
        PYTHON = "C:/Users/geras/AppData/Local/Programs/Python/Python312/python.exe"
        PROJECT_DIR = "C:/devops"
        PORT = "5000"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/Veronika-Gerasimova/lab1_devops.git'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Python dependencies...'
                bat "${env.PYTHON} -m pip install --upgrade pip"
                bat "${env.PYTHON} -m pip install -r ${env.PROJECT_DIR}/requirements.txt"
            }
        }

        stage('Run tests') {
            steps {
                echo 'Running pytest...'
                bat "${env.PYTHON} -m pytest -v ${env.PROJECT_DIR}"
            }
        }

        stage('Stop old server') {
            steps {
                echo 'Checking for existing Flask server on port 5000...'
                bat """
                for /f "tokens=5" %%a in ('netstat -ano ^| findstr :${env.PORT}') do (
                    taskkill /PID %%a /F
                )
                """
            }
        }

        stage('Deploy Flask App') {
            steps {
                echo 'Starting Flask server...'
                bat "start cmd /k \"${env.PYTHON} ${env.PROJECT_DIR}/app.py\""
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
        success {
            echo 'Tests passed and Flask server deployed!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
