pipeline {
    agent any
    
    environment {
        APP_NAME = 'lab1_devops'
        PYTHON_EXE = 'C:\\Users\\geras\\AppData\\Local\\Programs\\Python\\Python312\\python.exe' 
        PORT_DEV = '5000'
        PORT_PROD = '8000'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Получение кода из репозитория...'
                checkout scm
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                echo 'Создание виртуального окружения и установка зависимостей...'
                bat '%PYTHON_EXE% -m venv venv'
                bat '.\\venv\\Scripts\\python.exe -m pip install --upgrade pip'
                bat '.\\venv\\Scripts\\python.exe -m pip install -r requirements.txt'
            }
        }

        
        stage('Lint & Code Quality') {
            steps {
                echo 'Проверка качества кода...'
                bat '.\\venv\\Scripts\\flake8 app.py'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Запуск тестов...'
                bat '.\\venv\\Scripts\\pytest -v --tb=short'
            }
            post {
                always {
                    echo 'Тесты завершены.'
                }
            }
        }
        
        stage('Deploy to Dev') {
            when {
                branch 'dev'
            }
            steps {
                echo 'Деплой в dev окружение...'
                bat '''
                    echo Остановка предыдущего процесса, если есть...
                    taskkill /F /IM python.exe 2>nul || echo Нет запущенных процессов
                    echo Запуск приложения на порту %PORT_DEV%...
                    start /B .\\venv\\Scripts\\python.exe app.py
                    timeout /t 3 /nobreak >nul
                    curl -s http://localhost:%PORT_DEV%/ || echo Приложение еще запускается...
                '''
                echo 'Dev deployment completed'
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                echo 'Деплой в prod окружение...'
                bat '''
                    echo Остановка предыдущего процесса, если есть...
                    taskkill /F /IM python.exe 2>nul || echo Нет запущенных процессов
                    echo Запуск приложения на порту %PORT_PROD%...
                    start /B .\\venv\\Scripts\\python.exe app.py
                    timeout /t 3 /nobreak >nul
                    curl -s http://localhost:%PORT_PROD%/ || echo Приложение еще запускается...
                '''
                echo 'Production deployment completed'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline завершен'
        }
        success {
            echo 'Pipeline выполнен успешно!'
        }
        failure {
            echo 'Pipeline завершился с ошибкой!'
        }
    }
}
