pipeline {
    agent any

    environment {
        VENV = "${WORKSPACE}\\venv"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/Veronika-Gerasimova/lab1_devops.git'
            }
        }

        stage('Quality Test') {
            steps {
                bat 'python -m venv "%VENV%"'
                bat '"%VENV%\\Scripts\\activate" && pip install -r requirements.txt'
                bat '"%VENV%\\Scripts\\activate" && flake8 app.py test_app.py'
            }
        }

        stage('Unit Test') {
            steps {
                bat '"%VENV%\\Scripts\\activate" && pytest test_app.py'
            }
        }

        stage('Security Test') {
            steps {
                bat '"%VENV%\\Scripts\\activate" && bandit -r app.py'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage - in Flask we can skip compilation'
            }
        }

        stage('Push') {
            steps {
                echo 'Push stage - можно пушить Docker image или просто уведомление'
            }
        }

        stage('Deploy') {
            steps {
                bat 'start cmd /c "%VENV%\\Scripts\\activate && python app.py"'
                echo 'Deploy stage - приложение запущено'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
