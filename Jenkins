pipeline {
    agent any

    environment {
        PYTHON = "C:\\Users\\geras\\AppData\\Local\\Programs\\Python\\Python312\\python.exe"
        VENV = "${WORKSPACE}\\venv"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/Veronika-Gerasimova/lab1_devops.git'
            }
        }

        stage('Quality Test') {
            steps {
                bat '"%PYTHON%" -m venv "%VENV%"'
                bat 'call "%VENV%\\Scripts\\activate" && pip install -r requirements.txt'
                // Игнорировать ошибки flake8 и продолжать
                bat 'call "%VENV%\\Scripts\\activate" && flake8 app.py test_app.py || echo "flake8 warnings"'
            }
        }


        stage('Unit Test') {
            steps {
                bat 'call "%VENV%\\Scripts\\activate" && pytest test_app.py'
            }
        }

        stage('Security Test') {
            steps {
                bat 'call "%VENV%\\Scripts\\activate" && bandit -r app.py'
            }
        }

        stage('Build') {
            steps {
                echo 'Build stage - in Flask we can skip compilation'
            }
        }

        stage('Push') {
            steps {
                echo 'Push stage - можно пушить Docker image или просто уведомление'
            }
        }

        stage('Deploy') {
            steps {
                bat 'start cmd /c "call "%VENV%\\Scripts\\activate" && python app.py"'
                echo 'Deploy stage - приложение запущено'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
